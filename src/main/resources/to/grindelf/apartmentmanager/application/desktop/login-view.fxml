<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.text.Text?>
<?import javafx.geometry.Insets?>
<GridPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml"
          fx:controller="to.grindelf.apartmentmanager.application.desktop.controllers.LoginController">

    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <Label text="Login" GridPane.columnIndex="0" GridPane.rowIndex="0" GridPane.columnSpan="2"/>

    <TextField fx:id="usernameField" promptText="Username" GridPane.columnIndex="0" GridPane.rowIndex="1" />
    <PasswordField fx:id="passwordField" promptText="Password" GridPane.columnIndex="0" GridPane.rowIndex="2" />

    <Button text="Login" onAction="#handleLogin" GridPane.columnIndex="0" GridPane.rowIndex="3" />

    <Label fx:id="errorMessage" textFill="red" GridPane.columnIndex="0" GridPane.rowIndex="4" GridPane.columnSpan="2" />

    <Text GridPane.columnIndex="0" GridPane.rowIndex="5" GridPane.columnSpan="2">Don't have an account?</Text>
    <Hyperlink text="Sign Up" onAction="#switchToSignup" GridPane.columnIndex="2" GridPane.rowIndex="5" GridPane.columnSpan="2"/>
</GridPane>
