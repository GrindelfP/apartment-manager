<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.VBox?>
<VBox xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml"
      fx:controller="to.grindelf.apartmentmanager.application.desktop.controllers.LoginController" alignment="CENTER"
      spacing="10" prefHeight="200.0" prefWidth="300.0">
    <Label text="Login"/>
    <TextField fx:id="usernameField" promptText="Username"/>
    <PasswordField fx:id="passwordField" promptText="Password"/>
    <Button text="Login" onAction="#handleLogin"/>
    <Label fx:id="errorMessage" textFill="red"/>
    <Hyperlink text="Register" onAction="#switchToRegister"/>
</VBox>

