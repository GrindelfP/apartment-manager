<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.text.Text?>
<?import javafx.scene.control.Button?>
<GridPane xmlns:fx="http://javafx.com/fxml/1" alignment="CENTER" hgap="10" vgap="10"
          fx:controller="to.grindelf.apartmentmanager.application.desktop.controllers.AdminController">

    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <Button text="Users control panel" fx:id="usersButton" onAction="#handleUsers" GridPane.columnIndex="0" GridPane.rowIndex="3" />

    <Button text="Bookings control panel" fx:id="bookingsButton" onAction="#handleBookings" GridPane.columnIndex="1" GridPane.rowIndex="3" />

    <Button text="Rooms control panel" fx:id="roomsButton" onAction="#handleRooms" GridPane.columnIndex="2" GridPane.rowIndex="3" />

    <Button text="Log out" fx:id="logOut" onAction="#handleLogOut" GridPane.columnIndex="1" GridPane.rowIndex="5" />


</GridPane>
